{
  "manifest_version": 2,
  "name": "SoundFixer",
  "author": "unrelenting.technology",
  "version": "1.0.0",
  "description": "Lets you fix annoying sound problems (e.g. in YouTube videos) â€” audio in one channel only, too quiet or too loud",
  "applications": {
    "gecko": {
      "id": "soundfixer@unrelenting.technology"
    }
  },
  "icons": {
    "128": "icon.svg",
    "48": "icon48.png",
    "32": "icon.svg"
  },
  "permissions": [
    "activeTab",
    "webNavigation"
  ],
  "browser_action": {
    "default_icon": {
